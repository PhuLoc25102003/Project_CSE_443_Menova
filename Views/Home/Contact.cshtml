@model Menova.Models.ViewModels.ContactViewModel
@{
    ViewData["Title"] = "Liên hệ";
}

@section Styles {
    <link rel="stylesheet" href="~/css/contact.css" />
}

<div class="contact-page">
    <div class="container">
        <div class="contact-content">
            <div class="contact-form-section">
                <h1 class="contact-title">Bạn cần hỗ trợ điều gì?</h1>
                <p class="contact-description">
                    Bạn có câu hỏi về sản phẩm, đơn hàng hoặc chính sách đổi trả? Hãy để lại tin nhắn,
                    chúng tôi sẽ hỗ trợ bạn nhanh nhất có thể!
                </p>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <form asp-action="Contact" method="post">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="Name">Họ Tên</label>
                            <input asp-for="Name" class="form-control" placeholder="Họ tên của bạn" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Email của bạn" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Message">Tin nhắn</label>
                        <textarea asp-for="Message" class="form-control" rows="5" placeholder="Nội dung tin nhắn"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="form-submit">
                        <button type="submit" class="btn-submit">Gửi tin nhắn</button>
                    </div>
                </form>
            </div>

            <div class="contact-info-section">
                <h2 class="contact-subtitle">Hoặc liên hệ ngay</h2>
                <div class="contact-methods">
                    <a href="https://zalo.me/" target="_blank" class="contact-method">
                        <img src="~/images/zalo.webp" alt="Zalo" class="contact-icon" />
                    </a>
                    <a href="https://m.me/" target="_blank" class="contact-method">
                        <img src="~/images/messenger.webp" alt="Messenger" class="contact-icon" />
                    </a>
                    <a href="tel:+84123456789" class="contact-method">
                        <i class="fas fa-phone-alt"></i>
                    </a>
                </div>

                <div class="store-info">
                    <h2 class="contact-subtitle">Thông tin cửa hàng</h2>
                    <div class="info-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <p>Đường Nam Kỳ Khởi Nghĩa, Định Hoà, Tp. Thủ Dầu Một, Bình Dương</p>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-phone"></i>
                        <p>0999 999 999</p>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-envelope"></i>
                        <p>support@menova.com</p>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-clock"></i>
                        <p>Thứ 2 - Chủ nhật: 9:00 - 21:00</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 